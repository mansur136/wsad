def average_imdb_by_category(movies, category):
    total = 0
    count = 0
    for m in movies:
        if m["category"] == category:
            total += m["imdb"]
            count += 1
    if count == 0:
        return 0
    return total / count



#print("Средний рейтинг фильмов категории Romance =", average_imdb_by_category(movies, "Romance"))

